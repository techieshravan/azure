@*
*@

@model IEnumerable<MyFixIt.Persistence.FixItTask>

@{
    ViewBag.Title = "Index";
}

<h2>FixIts Assigned to You</h2>

@if (!Model.Any()) {
    <br />
    <div>You don't have anything currently assigned to you!!!</div>
}
else {
    <table class="table table-striped">
        <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
        
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.FixItTaskId }) |
                @Html.ActionLink("Edit", "Edit", new { id=item.FixItTaskId }) 
            </td>
        </tr>
    }

    </table>    
}
